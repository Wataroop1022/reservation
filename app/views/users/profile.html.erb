<div class="update-main col-lg-10">
  <div class="update-box">
    <%= form_with model: @user, local: true do |f|%>
    <div class="update-content">
      <h2>プロフィール</h2>
    </div>
    <div class="update-content">
      <%= f.label "必須", class: "col-md-3 required-a"%>
      <%= f.label "アイコン画像"%>
      <%= f.file_field :image %>
    </div>
    <div class="update-content">
      <%= f.label "名前"%>
      <%= f.text_field :name, class: "form-control", :placeholder => "名前を入力"%>
    </div>
    <div class="update-content">
      <%= f.label "自己紹介"%>
      <%= f.text_area :introduction, class: "form-control", :placeholder => "自己紹介を入力"%>
    </div>
    <div class="update-content">
      <%= f.submit "更新", class: "col-md-2 btn btn-primary mx-3" %>
    </div>
    <% end %>
    <div class="">
      <%= link_to("アカウント", "/users/account") %>
    </div>
  </div>
</div>
